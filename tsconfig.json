{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react",
    "baseUrl": "src",
    "paths": {
      "~/*": ["*"],
      "@assets/": ["Assets/*"],
      "@components/": ["Conponents/*"],
      "@config/": ["Config/*"],
      "@constants/": ["Constants/*"],
      "@functions/": ["Functions/*"],
      "@interfaces/": ["Interfaces/*"],
      "@redux/": ["Redux/*"],
      "@style/": ["Style/*"],
      "@utils/": ["Utils/*"],
      "@views/": ["Views/*"],
    }
  },
  "include": [
    "src"
  ]
}
